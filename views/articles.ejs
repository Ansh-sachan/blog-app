<% include partials/header %>
<ul
  class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-4 container mx-auto my-6"
>
  <% list.forEach(article =>{ %>
  <li class="bg-white shadow-md rounded-lg overflow-hidden ml-4">
    <img
      src="https://via.placeholder.com/300"
      alt="Article Image"
      class="w-full h-48 object-cover"
    />
    <div class="p-4">
      <h2 class="text-xl font-bold mb-2"><%= article.title %></h2>
      <p class="text-gray-700"><%= article.description.slice(0,150) %>...</p>
    </div>

    <a href="/articles/<%= article._id %>"
      ><button
        class="text-white p-2 bg-blue-500 hover:bg-blue-700 transition duration-500 rounded w-full"
      >
        View details
      </button></a
    >
  </li>
  <% }) %>
</ul>

<% include partials/footer %>
